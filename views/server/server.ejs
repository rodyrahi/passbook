<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Your meta tags and title here -->
</head>
<body>
    <div class="container">
        <h1>Server Status</h1>
        <form action="" method="post">
            <% if (appData && appData.length > 0) { %>
                <ul>
                    <% appData.forEach(app => { %>
                        <li>
                            <span><%= app.name %></span>
                            <% if (app.status === 'online') { %>
                                <button type="submit" name="restart" value="<%= app.name %>">Restart</button>
                                <button type="submit" name="stop" value="<%= app.name %>">Stop</button>
                            <% } else { %>
                                <span><%= app.status %></span>
                            <% } %>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No apps found.</p>
            <% } %>
        </form>
    </div>
</body>
</html>
